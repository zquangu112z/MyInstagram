<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ngu.myinstagram.fragment.CameraGallery">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#232728"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:id="@+id/bt_close_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_close" />

        <TextView
            android:id="@+id/tv_camera_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="gallery"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:layout_toRightOf="@+id/bt_close_gallery"
            android:layout_toEndOf="@+id/bt_close_gallery" />
    </RelativeLayout>

</RelativeLayout>
