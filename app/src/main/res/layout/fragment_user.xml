<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <com.example.ngu.myinstagram.helper.layout.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar_test"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">

                <LinearLayout
                    android:id="@+id/ll_profile_number_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="19dp"
                        android:id="@+id/tv_profile_number_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="posts" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile_number_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="19dp"
                        android:id="@+id/tv_profile_number_followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="followers" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile_number_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="19dp"
                        android:id="@+id/tv_profile_number_following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="following" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_marginTop="7dp"
                android:id="@+id/bt_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT YOUR PROFILE"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngu Quang Truong"
        android:id="@+id/tv_profile_user_name"
        android:textColor="@color/background_material_dark"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life is unfair"
        android:id="@+id/tv_profile_user_quote"
        android:textColor="@color/background_floating_material_dark"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quangngu.zz.mu"
        android:id="@+id/tv_profile_user_website"
        android:textColor="@color/highlighted_text_material_light"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/switch_thumb_normal_material_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_profile_tab"
        android:orientation="horizontal"></LinearLayout>
    <ImageView
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/switch_thumb_normal_material_dark"/>

</LinearLayout>
